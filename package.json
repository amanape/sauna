{
  "name": "@amanape/sauna",
  "version": "0.5.0",
  "description": "A lightweight CLI wrapper for AI coding agents",
  "author": "amanape",
  "license": "MIT",
  "homepage": "https://github.com/amanape/sauna",
  "repository": {
    "type": "git",
    "url": "https://github.com/amanape/sauna.git"
  },
  "bugs": {
    "url": "https://github.com/amanape/sauna/issues"
  },
  "keywords": [
    "cli",
    "ai",
    "coding-agent",
    "claude",
    "codex"
  ],
  "module": "index.ts",
  "type": "module",
  "bin": {
    "sauna": "./index.ts"
  },
  "files": [
    "src/",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build ./index.ts --compile --outfile sauna",
    "build:all": "bun build ./index.ts --compile --target=bun-darwin-arm64 --outfile dist/sauna-darwin-arm64 && bun build ./index.ts --compile --target=bun-darwin-x64 --outfile dist/sauna-darwin-x64 && bun build ./index.ts --compile --target=bun-linux-x64 --outfile dist/sauna-linux-x64 && bun build ./index.ts --compile --target=bun-linux-arm64 --outfile dist/sauna-linux-arm64 && bun build ./index.ts --compile --target=bun-windows-x64 --outfile dist/sauna-windows-x64.exe",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test",
    "prepare": "bunx simple-git-hooks",
    "prepublishOnly": "bun test && bun run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript-eslint": "^8.56.0",
    "yaml": "^2.8.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "simple-git-hooks": {
    "commit-msg": "bunx commitlint --edit $1"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "@openai/codex-sdk": "^0.104.0",
    "cleye": "^2.2.1",
    "smol-toml": "^1.6.0"
  }
}
